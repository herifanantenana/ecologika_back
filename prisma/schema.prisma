generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["omitApi"]
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

enum Role {
    USER
    SELLER
    ADMIN
}

model User {
    id          Int      @id @default(autoincrement())
    email       String   @unique
    password    String
    profileUrl  String?
    fullname    String
    username    String
    preferences Json?
    role        Role     @default(USER)
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    @@map("users")
}
